@model Product

<tr>
    <td>@Model.Name</td>
    <td>@Model.Price</td>
    <td>
        <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.ProductID">
            Edit
        </a>
        <a class="btn btn-warning" asp-action="Delete" asp-route-id="@Model.ProductID">
            Delete
        </a>
    </td>
</tr>